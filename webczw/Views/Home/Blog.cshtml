@{
    ViewBag.Title = "博客";
}
<h3>@ViewBag.Message</h3>
<ol class="breadcrumb">
    <li><a href="#">首页</a></li>
    <li><a href="#">博客</a></li>
    <li class="active">全部</li>
</ol>
<table class="table">
    <thead>
        <tr>
            <th scope="col">标题</th>
            <th scope="col">点击率</th>
            <th scope="col">创建日期</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var articlesModels in ViewBag.PageResultModels.List)
        {
            <tr>
                <td><a target="_blank" href="/Home/Detail/@articlesModels.Id">@articlesModels.Title</a></td>
                <td>@articlesModels.Ctr</td>
                <td>@articlesModels.CreateDate</td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="/Home/Blog">首页</a></li>
        <li class="page-item"><a class="page-link" href="#">上一页</a></li>
